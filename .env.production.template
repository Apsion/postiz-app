# Production Environment Variables for Postiz on Dokploy
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to git!

# ============================================================================
# REQUIRED: Database & Cache
# ============================================================================
# Use internal Docker network container names (postiz-postgres, postiz-redis)
DATABASE_URL="postgresql://postiz:CHANGE_ME_SECURE_PASSWORD@postiz-postgres:5432/postiz"
REDIS_URL="redis://postiz-redis:6379"

# Generate strong password: openssl rand -base64 32
POSTGRES_PASSWORD="CHANGE_ME_SECURE_PASSWORD"

# ============================================================================
# REQUIRED: Security
# ============================================================================
# Generate: openssl rand -base64 64
JWT_SECRET="CHANGE_ME_LONG_RANDOM_STRING_FOR_JWT_SECRET"

# ============================================================================
# REQUIRED: Application URLs
# ============================================================================
# Must match your domain exactly
FRONTEND_URL="https://postiz.apsion.com"
NEXT_PUBLIC_BACKEND_URL="https://postiz.apsion.com/api"
BACKEND_INTERNAL_URL="http://localhost:3000"

# ============================================================================
# REQUIRED: Storage Configuration
# ============================================================================
# For 2 users, local storage is recommended (simple and secure)
# You can switch to Cloudflare R2 later if needed

# Use local file storage (files stored in Docker volume)
STORAGE_PROVIDER="local"
UPLOAD_DIRECTORY="/uploads"

# ============================================================================
# OPTIONAL: Cloudflare R2 Storage (Advanced)
# ============================================================================
# Only enable if you need cloud storage or plan to scale
# IMPORTANT: Create a SEPARATE bucket just for Postiz media
# DO NOT use your backup bucket - create a dedicated one like "postiz-media"
#
# To enable R2:
# 1. Create new R2 bucket (e.g., "postiz-media")
# 2. Create scoped API token with access ONLY to that bucket
# 3. Uncomment variables below and fill in your values
# 4. Change STORAGE_PROVIDER to "cloudflare"
# 5. Redeploy application

#CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
#CLOUDFLARE_ACCESS_KEY="your-r2-access-key-id"
#CLOUDFLARE_SECRET_ACCESS_KEY="your-r2-secret-access-key"
#CLOUDFLARE_BUCKETNAME="postiz-media"
#CLOUDFLARE_BUCKET_URL="https://postiz-media.your-account-id.r2.cloudflarestorage.com"
#CLOUDFLARE_REGION="auto"

# ============================================================================
# REQUIRED: System Configuration
# ============================================================================
IS_GENERAL="true"
NX_ADD_PLUGINS=false

# ============================================================================
# ENABLED: Email (Resend)
# ============================================================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="re_CHANGE_ME_YOUR_RESEND_API_KEY"
EMAIL_FROM_ADDRESS="noreply@apsion.com"
EMAIL_FROM_NAME="Postiz"

